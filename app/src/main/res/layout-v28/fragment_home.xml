                android:layout_width="164dp"
                android:layout_height="170dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:outlineAmbientShadowColor="@color/black"
                android:background="@drawable/custom_edittext"
                android:orientation="vertical">

